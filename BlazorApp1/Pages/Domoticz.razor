@page "/domoticz"
@inherits DomoticzBase
<h3>Domoticz</h3>

<button class="btn btn-primary" @onclick="GetDomoticzData">Click me</button>

@if (domoticzData == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="container">
        <div class="row">
            @foreach(GoodweDataManagement.Models.Domoticz.DomoticzDataResult result in domoticzData.Result)
            {
                <div class="col-4">
                    <div class="card mb-4 box-shadow">
                        <div class="card-body">
                            HardwareName: @result.HardwareName <br />
                            HardwareType: @result.HardwareType <br />
                            Type: @result.Type <br />
                            Data: @result.Data <br />
                            Idx: @result.idx <br />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}

